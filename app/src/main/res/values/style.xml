<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Raleway30Black">
        <item name="android:fontFamily">@font/raleway_black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="buttonWhite">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">36dp</item>
        <item name="android:textColor">@color/customBlack</item>
    </style>
    
    <style name="Raleway16Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/customBlack</item>
        <item name="lineHeight">20sp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="Raleway34Bold">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="lineHeight">44.2sp</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Raleway32Bold">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Poppins16regular">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="editTextLogin">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:textColor">@color/customBlack</item>
        <item name="android:textColorHint">@color/darkGrey</item>
    </style>
    
    <style name="Poppins12regular">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="blueButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>